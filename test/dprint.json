{
    "lineWidth": 120,
    "typescript": {
        "quoteStyle": "preferSingle"
    },
    "dockerfile": {
        "newLineKind": "crlf"
    },
    "markdown": {
        "strongKind": "underscores"
    },
    "json": {
        "commentLine.forceSpaceAfterSlashes": false
    },
    "toml": {
        "comment.forceLeadingSpace": false
    },
    "malva": {
        "hexCase": "upper"
    },
    "markup": {
        "closingTagLineBreakForEmpty": "always"
    },
    "excludes": [
      "**/node_modules"
    ],
    "plugins": [
        "node_modules/@dprint/typescript/plugin.wasm",
        "node_modules/@dprint/dockerfile/plugin.wasm",
        "node_modules/@dprint/markdown/plugin.wasm",
        "node_modules/@dprint/json/plugin.wasm",
        "node_modules/@dprint/toml/plugin.wasm",
        "node_modules/dprint-plugin-malva/plugin.wasm"
    ]
}