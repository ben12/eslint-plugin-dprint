{
    "lineWidth": 120,
    "typescript": {
        "indentWidth": 4,
        "semiColons": "asi",
        "operatorPosition": "sameLine",
        "conditionalExpression.operatorPosition": "nextLine",
        "quoteStyle": "preferDouble"
    },
    "markdown": {
        "indentWidth": 2
    },
    "excludes": [
      "**/node_modules"
    ],
    "plugins": [
        "node_modules/@dprint/typescript/plugin.wasm",
        "node_modules/@dprint/markdown/plugin.wasm"
    ]
}